#energy density: 2.3E11 J/m^3
#magnetic field: 5.38E-9 T
#momentum: 262.4 (m_p cm^-3)(km s^-1)
#temperature: 111111 K

<problem>
rout = 40.0     # overwriting region outer radius (purely simulated variables from rout -> infinity)
rramp = 30.0    # overwriting region ramp radius (linear weighting of theoretical and simulated variables from rramp -> rout)
rin = 5.0       # overwriting region inner radius (adjusted variables from 0->rin, purely theoretical variables from rin -> rramp)
rin_mag = 15.0  # same as above but for magnetic fields
rref = 1.0      # reference radius (at which all of the below specified variables are given an initial value)
b0         = 0.05
