<hydro>
gamma           = 1.666666666667 # gamma = C_p/C_v
iso_sound_speed = 0.4082482905   # equavalent to sqrt(gamma*p/d) for p=0.1, d=1

#MACHINE UNIT VALUES:
#FIXED VALUES
#distance: 1 AU
#velocity: 52.483 km/s
#mass density: 2.8E13 kg/AU^3 (or 5 m_p/cm^3)
